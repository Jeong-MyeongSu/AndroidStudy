<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:andorid="http://schemas.android.com/apk/res-auto"
  android:id="@+id/item_install_app"
  android:orientation="vertical"

  android:layout_width="match_parent"
  android:layout_height="wrap_content">
  <LinearLayout
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
      android:id="@+id/img_item_install_app"
      android:layout_margin="8dp"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:scaleType="fitCenter"
      android:contentDescription="@string/icon"/>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:layout_margin="8dp">
      <TextView
        android:id="@+id/txt_item_install_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/md"
        android:layout_marginBottom="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text = "AppName"/>
      <TextView
        android:id="@+id/txt_item_install_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sm"
        tools:text = "Category"/>
    </LinearLayout>
  </LinearLayout>

</LinearLayout>