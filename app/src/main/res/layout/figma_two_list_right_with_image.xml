<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    tools:ignore="RtlSymmetry">
    <LinearLayout
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_gravity="right"
        android:background="@drawable/figma_two_right_with_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginBottom="4dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/default_image_figma_two_rigth_with_image"/>
        <TextView
            android:id="@+id/figma_two_list_with_image_text"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Homemade Dumplings"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="everydumplingever.com"/>
    </LinearLayout>
</LinearLayout>